{
  "expo": {
    "name": "TransitionTracker",
    "slug": "TransitionTracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": { 
        "NSCameraUsageDescription": "We need camera permissions to allow you to upload photos.", 
        "NSPhotoLibraryAddUsageDescription": "We need photo library permissions to allow you to upload images.", 
        "NSPhotoLibraryUsageDescription": "We need photo library permissions to allow you to upload profile images." }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
